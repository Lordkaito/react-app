{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "no-unused-vars": "off",
    "linebreak-style": "off",
    "no-use-before-define": "off",
    "arrow-body-style": "off",
    "max-len": "off"
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}
